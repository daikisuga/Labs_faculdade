from math import sqrt
print("Versor de um Vetor:")
print("Coordenadas do vetor:")


u = []
v =[]
r = int(0)
for i in range(0, 3):
    aux = float(input("Digite a %ia. coordenada: " %(i+1)))
    u.append(aux)
    
for i in range(0, 3):
    aux = u[i]*u[i]
    r+=aux
r = sqrt(r)

print("Versor: 1/%.2f (%.2f, %.2f, %.2f)" %(r, u[0], u[1], u[2]))
print("Versor: (%.2f, %.2f, %.2f)" %(u[0]/r, u[1]/r, u[2]/r))
